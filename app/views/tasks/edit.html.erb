<h2>スケジュール編集</h2>
<%= form_for @task do |f| %>
    <table>
        <tr>
            <th><%= f.label :title ,"タイトル" %></th>
            <td><%= f.text_field :title %></td>
        </tr>
        <tr>
            <th><%= f.label :start_day ,"開始日" %></th>
            <td><%= f.text_field :start_day %></td>
        </tr>
        <tr>
            <th><%= f.label :finish_day ,"終了日" %></th>
            <td><%= f.text_field :finish_day %></td>
        </tr>
        <tr>
            <th><%= f.label :time ,"終日" %></th>
            <td><%= f.text_area :time %></td>
        </tr>
        <tr>
            <th><%= f.label :schedule_memo ,"スケジュールメモ" %></th>
            <td><%= f.text_area :schedule_memo %></td>
        </tr>
    </table>
    <div>
        <ul>
            <li><%= f.submit "スケジュールを更新する"%></li>
            <li><%= link_to "スケジュール一覧に戻る", :tasks %></li>
        </ul>
    </div>
<% end %>